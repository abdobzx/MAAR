# Configuration Production - Syst√®me RAG Enterprise
# =====================================================

# Environnement
ENVIRONMENT=production
APP_NAME=Enterprise RAG System
APP_VERSION=1.0.0
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration (Production)
DATABASE_URL=postgresql+asyncpg://rag_user:STRONG_PASSWORD@postgres-service:5432/rag_database
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://:STRONG_REDIS_PASSWORD@redis-service:6379/0
REDIS_PASSWORD=STRONG_REDIS_PASSWORD
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Vector Database (Qdrant)
QDRANT_HOST=qdrant-service
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents_prod
VECTOR_DB_PROVIDER=qdrant

# LLM Configuration (SothemaAI focused)
LLM_PROVIDER=sothemaai
SOTHEMAAI_BASE_URL=https://api.sothemaai.com
SOTHEMAAI_API_KEY=your-sothemaai-api-key
SOTHEMAAI_TIMEOUT=30

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Security Configuration
SECURITY_SECRET_KEY=your-super-strong-secret-key-32-chars-min
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
SECURITY_CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Storage Configuration (MinIO/S3)
STORAGE_ENDPOINT=minio-service:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=STRONG_MINIO_PASSWORD
STORAGE_BUCKET_NAME=rag-documents-prod
STORAGE_SECURE=true

# Processing Configuration
PROCESSING_CHUNK_SIZE=1000
PROCESSING_CHUNK_OVERLAP=200
PROCESSING_MAX_WORKERS=8

# Celery Configuration
CELERY_BROKER_URL=redis://:STRONG_REDIS_PASSWORD@redis-service:6379/1
CELERY_RESULT_BACKEND=redis://:STRONG_REDIS_PASSWORD@redis-service:6379/2
CELERY_WORKER_CONCURRENCY=8
CELERY_TASK_TIME_LIMIT=1800

# Monitoring Configuration
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090

# Security Headers
SERVER_TOKENS=off
SECURITY_HEADERS=true
